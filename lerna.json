{
  "useWorkspaces": true,
  "packages": ["gatsby-theme-purist"],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": ["main"],
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "yes": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "version": "independent"
}
